<UserControl x:Class="CustomControlsWPF.LabeledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControlsWPF"
             mc:Ignorable="d" MaxHeight="75" MinHeight="75">
    <Grid x:Name="gMain" Background="White" Height="75" VerticalAlignment="Center">
        <TextBox x:Name="txbValue" Margin="5,30,4,0" TextWrapping="Wrap" Text="some string" VerticalAlignment="Top" TextChanged="txbValue_TextChanged"/>
        <Label x:Name="lblTitle" Content="Title" Margin="0,5,4,0" VerticalAlignment="Top" Height="25"/>
        <Label x:Name="lblError" Content="Error text" Margin="0,48,4,0" VerticalAlignment="Top" Height="25" Foreground="#FFDE2020"/>

    </Grid>
</UserControl>
