<UserControl x:Class="CustomControlsWPF.LabeledTextBoxAndComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControlsWPF"
             mc:Ignorable="d">
    <Grid x:Name="gMain" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblTitle" Content="Label" VerticalAlignment="Top" Height="25"/>
        <TextBox x:Name="txbValue" Margin="5,25,5,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="20"/>
        <ComboBox x:Name="cbItems" Margin="5,25,5,0" VerticalAlignment="Top" Grid.Column="1" Height="20"/>
        <Label x:Name="lblError" Content="Label" Margin="0,45,5,0" VerticalAlignment="Top" Height="25" Background="#00000000" Foreground="#FFDE2020"/>

    </Grid>
</UserControl>
