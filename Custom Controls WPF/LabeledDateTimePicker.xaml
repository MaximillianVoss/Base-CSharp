<UserControl x:Class="CustomControlsWPF.LabeledDateTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControlsWPF"
             mc:Ignorable="d" MinHeight="80" MaxHeight="80">
    <Grid x:Name="gMain" Background="White" Height="80">
        <DatePicker x:Name="dtpDate" Margin="5,30,4,0" VerticalAlignment="Top"/>
        <Label x:Name="lblError" Content="Label" Margin="0,54,10,0" VerticalAlignment="Top" Foreground="#FFDE2020"/>
        <Label x:Name="lblTitle" Content="Label" VerticalAlignment="Top" Margin="0,5,4,0"/>

    </Grid>
</UserControl>
