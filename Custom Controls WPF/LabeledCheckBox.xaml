<UserControl x:Class="CustomControlsWPF.LabeledCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControlsWPF"
             mc:Ignorable="d" VerticalAlignment="Top" HorizontalAlignment="Left">
    <Grid x:Name="gMain" Background="White" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblTitle" Content="Label" Height="26"/>
        <Label x:Name="lblError" Content="Label" Grid.Row="2" Height="26" Foreground="#FFDE2020"/>
        <CheckBox x:Name="chbValue" Content="CheckBox" Grid.Row="1" Height="20" Margin="0,4,0,0" Click="chbValue_Click" Loaded="chbValue_Loaded"/>

    </Grid>
</UserControl>
