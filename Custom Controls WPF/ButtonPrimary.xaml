<local:BaseControl x:Class="CustomControlsWPF.ButtonPrimary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControlsWPF"
             mc:Ignorable="d">
    <Grid>
        <Button x:Name="btn" Content="Button" Background="#FF0D6EFD" Foreground="White"  FontSize="14" BorderBrush="{x:Null}" Padding="0,0,0,0" FontFamily="Segoe UI Semilight" BorderThickness="0,0,0,0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</local:BaseControl>
