<UserControl x:Class="CustomControlsWPF.LabeledComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControlsWPF"
             mc:Ignorable="d" MinHeight="75" MaxHeight="75" MinWidth="100">
    <Grid x:Name="gMain" Background="White">
        <ComboBox x:Name="cbItems" Margin="4,26,4,0" VerticalAlignment="Top" SelectionChanged="cbItems_SelectionChanged" DragOver="cbItems_DragOver"/>
        <Label x:Name="lblTitle" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,4,0"/>
        <Label x:Name="lblError" Content="Label" Margin="0,48,4,0" VerticalAlignment="Top" Foreground="#FFDE2020"/>

    </Grid>
</UserControl>
